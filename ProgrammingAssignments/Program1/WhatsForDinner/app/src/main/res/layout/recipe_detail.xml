<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/recipe_detail_rl"
            android:layout_width="match_parent" android:layout_height="match_parent">


            <TextView
                android:id="@+id/recipe_name_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Recipe Name"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <LinearLayout
                android:id="@+id/details_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:layout_marginTop="12dp"
                android:layout_below="@id/recipe_name_detail"
                android:padding="15dp"
                >

                <ImageView
                    android:id="@+id/recipe_image_detail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/meal_icon" />


                <LinearLayout
                    android:id="@+id/details2_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >


                    <TextView
                        android:id="@+id/recipe_ingredient_title_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/recipe_image_detail"
                        android:gravity="center"
                        android:text="Ingredients:"
                        android:textSize="15sp"
                        android:textStyle="italic|bold" />

                    <TextView
                        android:id="@+id/recipe_ingredients_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/recipe_image_detail"
                        android:layout_below="@id/recipe_ingredient_title_detail"
                        android:gravity="center"
                        android:text=""
                        android:layout_marginLeft="15dp"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/recipe_description_title_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/details_linearLayout"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text="Directions:"
                android:textSize="15sp"
                android:textStyle="italic|bold"/>

            <TextView
                android:id="@+id/recipe_description__detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/recipe_description_title_detail"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:text=""
                />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>