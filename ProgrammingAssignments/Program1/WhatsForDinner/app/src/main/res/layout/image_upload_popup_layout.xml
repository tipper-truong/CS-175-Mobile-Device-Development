<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_image_upload_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="2dp"
    android:background="#00FA9A"
    >
    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_white_24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        />

    <Button
        android:id="@+id/upload_image_url_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="25sp"
        android:layout_marginBottom="50dp"
        android:text="Upload Image via URL" />

    <Button
        android:id="@+id/upload_image_local_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Upload Image Locally"
        android:padding="25sp"
        android:layout_below="@+id/upload_image_url_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>