<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tipper.whatsfordinner.CreateMealPlanActivity">
    
    <TextView
        android:id="@+id/selectedDate"
        android:layout_width="match_parent"
        android:layout_height="551dp"
        android:text="Selected Date"
        android:gravity="center|top"
        tools:ignore="MissingConstraints"
        android:textSize="45sp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <Spinner
        android:id="@+id/spinnerBreakfast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="95dp"
        android:layout_below="@+id/spinnerBreakfast"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinnerDinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerLunch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="95dp" />

    <Button
        android:id="@+id/submitMeals"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerDinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:background="@color/highlightCal"
        android:text="Submit" />

    <TextView
        android:id="@+id/breakfastTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerBreakfast"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:textStyle="italic"
        android:text="Breakfast" />

    <TextView
        android:id="@+id/lunchTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerLunch"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:textStyle="italic"
        android:text="Lunch" />

    <TextView
        android:id="@+id/dinnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerDinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:textStyle="italic"
        android:text="Dinner" />





</RelativeLayout>
